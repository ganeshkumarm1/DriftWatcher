{
  "manifest_version": 3,
  "name": "Drift Watcher",
  "version": "1.0.0",
  "description": "Tracks browser activity to help you stay focused on your goals",
  "permissions": ["tabs"],
  "icons": {
    "16": "favicon_io/favicon-16x16.png",
    "32": "favicon_io/favicon-32x32.png",
    "48": "favicon_io/favicon-32x32.png",
    "128": "favicon_io/android-chrome-192x192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
